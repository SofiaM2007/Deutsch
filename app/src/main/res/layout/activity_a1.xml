<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/springgreen"
    tools:context=".A1">

    <TextView
        android:id="@+id/textViewNameA1"
        android:layout_width="728dp"
        android:layout_height="81dp"
        android:text="A1"
        android:textIsSelectable="false"
        android:textSize="34sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.333"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/buttonArtikle"
        android:layout_width="142dp"
        android:layout_height="108dp"
        android:layout_marginBottom="132dp"
        android:backgroundTint="@color/Lime"
        android:onClick="go_to_artikel_aktivity"
        android:text="Artikel"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewNameA1"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/nom_akk"
        android:layout_width="142dp"
        android:layout_height="108dp"
        android:backgroundTint="@color/Lime"
        android:onClick="go_to_padezh"
        android:text="Nom/Akk"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.019"
        app:layout_constraintStart_toEndOf="@+id/buttonArtikle"
        app:layout_constraintTop_toBottomOf="@+id/textViewNameA1"
        app:layout_constraintVertical_bias="0.0" />

</androidx.constraintlayout.widget.ConstraintLayout>